public class SendEmail {
	
	public static void courseRegistered(String studentEmail, String courseCode, String courseName, int classIndex) {

		    final String username = "Grp5StarsSystem@outlook.com";  // account outlook email
		    final String password = "Grp5Password";   				// password here

		    Properties props = new Properties();
		    props.put("mail.smtp.auth", "true");
		    props.put("mail.smtp.starttls.enable", "true");
		    props.put("mail.smtp.host", "smtp-mail.outlook.com");
		    props.put("mail.smtp.port", "587");

		    Session session = Session.getInstance(props,
		      new javax.mail.Authenticator() {
		        @Override
		        protected PasswordAuthentication getPasswordAuthentication() {
		            return new PasswordAuthentication(username, password);
		        }
		      });

		    try {

		        Message message = new MimeMessage(session);
		        message.setFrom(new InternetAddress(username));
		        message.setRecipients(Message.RecipientType.TO,
		            InternetAddress.parse(studentEmail));   			// recipient email
		        message.setSubject("Course Registered");
		        message.setText("You have successfully registered " + courseCode + " "+ courseName + "(Class Index: " + classIndex + ").");

		        Transport.send(message);

		    } catch (MessagingException e) {
		        //throw new RuntimeException(e);
		    }
		}
		

}
